  .slider-container__inner {
    position: relative;
    display: flex;
    align-items: center;
    width: 60%;
    margin: 5% auto 3% auto;
}
  .appertext ,.techcondi ,.screen{
    font-family: var(--font-stack-header);
    font-weight: var(--font-weight-header);
    font-style: var(--font-style-header);
    color: var(--color-heading-text);
    line-height: normal;
    font-size: 16px;}
.maintext{
    font-size: 1.25rem;
    margin-bottom: 0.625rem;
    font-family: Oswald, sans-serif;
    line-height: 1.75rem;
    font-weight: 500;
}
  .mobileZoom {
    margin-bottom: 3%;
}
  @media screen and (max-width: 520px){
    .slider-container__inner {
        width: 90%;
    }
    .round-loope{
    height:115px!important;
    width:115px!important;
    }
    .tab-content {
    margin: 5% 0;
    }
    .slider-container__inner{
      margin:5% auto 8% auto;
    }
  }
    @media screen and (max-width: 1024px){
      .fordesktop{
        display:none;
      }
      .formobile{
        display:block;
      }
       .range_slider_img_text .showcontent,.range_slider_img_text .logoimagess{
         display:block;
       }
      .range_slider_img_text  .imagesection,.range_slider_img_text  .discriptionclass,.range_slider_img_text  .slider-container__inner{
        width:80%;
      }
        .range_slider_img_text  .inputtext{
        margin-top: 20px;
  }
    }
    
</style>
