
<div class="Containers logoblock">
  <div class="">
     <div class="slider-container ">
    
    <div class="logoimagess">
        <div class="discriptionclass">
       {% for block in section.blocks %}
            <div class="mobileZoom forHide{{ forloop.index }}">
                 <div class="showcontent">                 
                      <div class="tab-content">
                            <h2 class="maintext">APPEARANCE :<span class="appertext">{{ block.settings.mappearance }}</span></h2>
                            <h2 class="screen">SCREEN :{{ block.settings.mscreen }}</h2>
                            <h2 class="techcondi">Technical Condition: <span class="appertext">{{ block.settings.condition }}</span></h2>
                            <p class="descus">{{ block.settings.mobileDes }}</p>
                         <div class="sf__featured-collection-button flex justify-center learnmorebtn">
                          {% if block.settings.learnmorebtnurl != blank %}
                            <a class="sf__btn sf__btn-primary " href="{{ block.settings.learnmorebtnurl }}" data-load-more>
                              <span>{{ block.settings.learnmorebtntext }}</span>
                            </a>
                          {% endif %}
                        </div>
                      </div>
                 </div>
            </div>
           {% endfor %}
           </div>
      <div class="slider-container__inner">
        <div class="slider-container__inner">  
          <input type="range" class="range-slider1" min="0" max="2" value="0" step="1"style="background-size: 0% 100%;">
             {% for block in section.blocks %}
                <div class="slider__marker slider__marker--{{ forloop.index }}"> {% if forloop.index == 1 %} <div class="inputtext formobile">fair</div>{% endif %} {% if forloop.index == 3 %} <div class="inputtext fordesktop">fair</div>{% endif %}</div>
             {% endfor %}
        </div>
      </div>
   

       <div class="imagesection">
          {% for block in section.blocks %}
            <div class="mobileZoom forHide{{ forloop.index }}">
                 <div class="showcontent">
                      <div class="parterimg MagicZoom" href="{{ media | img_url: '2024x2024' }}" data-options="zoomPosition: inner">
                        <img src="{{ block.settings.molileimg|img_url: '800x' }}" class="rounded image-zoom{{ forloop.index }}">
                      </div>
                 </div>
            </div>
         {% endfor %}
      </div>
    </div>
  </div>
</div>
</div>
{% schema %}
  {
    "name": "range_slider_img_text",
    "class":"range_slider_img_text",
    "settings": [
  
      
    ],
    "blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
       {
    "type": "image_picker",
    "id": "molileimg",
    "label": "Image"
      },
       {
    "type": "text",
    "id": "mappearance",
    "label": "Appearance"
      },
       {
    "type": "text",
    "id": "mscreen",
    "label": "Screen"
      },
        {
    "type": "text",
    "id": "condition",
    "label": "Condition"
      },
        {
    "type": "text",
    "id": "mobileDes",
    "label": "Description"
      },
   {
    "type": "text",
    "id": "learnmorebtntext",
    "label": "Button text"
      },
       {
    "type": "url",
    "id": "learnmorebtnurl",
    "label": "Button url"
      }
    ]
  }
    ],
      
      
      
      "presets": [
  {
   "name": "range_slider_img_text"
  }
]
  }
{% endschema %}
<style>
